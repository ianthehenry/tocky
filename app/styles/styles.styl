body, textarea
  font-family: sans-serif
  font-size: 13pt

dark-color = #383
mid-color = #8f8
light-color = #88f
border-color = darken(mid-color, 50%)

message-spacing = .25em

header
  background-color: dark-color
#sidebar
  background-color: red
  .room-name
    background-color: #ff0
  .unread-count
    background-color: #88f

#room-header
  background-color: mid-color
  border-bottom: solid 1px border-color

#messages-list
  padding-bottom: message-spacing
  background-color: mid-color
  .message
    padding: 0 message-spacing
    .row
      margin-top: message-spacing
    .gutter
      position: relative
      margin-right: message-spacing
    .sender-name
      font-weight: bold
    .status
      width: 10px
      height: 10px
      border-radius: 5px
      margin: 0 auto
      position: absolute
      top: 50%
      left: 50%
      margin-left: -5px
      margin-top: -5px
      background-color: grey
    &.unread .status
      background-color: blue
    .message-timestamp
      color: #888
      margin-left: message-spacing
    &.showing-sender:not(:first-of-type)
      border-top: solid 1px border-color
      margin-top: message-spacing

#message-input
  border: none
  &:focus
    outline: none

#users
  background-color: dark-color
