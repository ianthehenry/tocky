body, textarea
  font-family: sans-serif
  font-size: 13pt

dark-color = #383
mid-color = #8f8
light-color = #88f
border-color = darken(mid-color, 50%)

message-spacing = .25em

header
  background-color: dark-color
#rooms
  background-color: red
  .room-name
    background-color: #ff0
  .unread-count
    background-color: #88f

#room-header
  background-color: mid-color
  border-bottom: solid 1px border-color

#messages-list
  padding-bottom: message-spacing
  background-color: mid-color
  .message
    padding: 0 message-spacing
    .row
      margin-top: message-spacing
    .gutter
      margin-right: message-spacing
    .sender
      font-weight: bold
    .gutter.status.unread
      background-color: cyan
    .message-timestamp
      color: #888
      margin-left: message-spacing
    &:not(.repeat-sender):not(:first-of-type)
      border-top: solid 1px border-color


#users
  background-color: dark-color
