*
  margin: 0
  padding: 0

gutter-size = 20px

html, body
  height: 100%
  -webkit-user-select: none

#body
  height: 100%
  display: flex
  flex-direction: column

header
  flex: none
  height: 50px

#everything
  flex: auto
  display: flex

#sidebar
  width: 100px

  .room
    display: flex
    white-space: nowrap

  .room-name
    text-overflow: ellipsis
    overflow: hidden
    flex: 1

#content
  flex: 1
  display: flex
  flex-direction: column

#room-header
  line-height: 40px

#room-content
  display: flex
  flex: 1

#messages-container
  display: flex
  flex: 1
  flex-direction: column

#messages-list
  flex: auto
  overflow-y: scroll
  .message
    .row
      display: flex
      .gutter
        flex: none
        width: gutter-size
        height: gutter-size
      .alley
        flex: auto
    .message-content
      -webkit-user-select: text
    .message-timestamp
      float: right

#message-input
  flex: none
  resize: none

#users
  width: 100px
